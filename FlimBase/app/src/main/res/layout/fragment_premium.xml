<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1145"
    tools:context=".view.PremiumFragment">

    <TextView
        android:id="@+id/premium_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FilmBase Premium"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="italic"
        android:layout_margin="30dp"/>

    <ImageView
        android:id="@+id/right_tik1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rigth"
        android:layout_below="@id/premium_page"
        android:layout_margin="20dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/right_tik1"
        android:text="Exclusive World Premiere and \nOriginal Shows"
        android:textSize="16dp"
        android:layout_below="@id/premium_page"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/right_tik2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rigth"
        android:layout_below="@id/right_tik1"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/right_tik2"
        android:text="Latest International Shows"
        android:textSize="16dp"
        android:layout_below="@id/right_tik1"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/right_tik3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rigth"
        android:layout_below="@id/right_tik2"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/right_tik3"
        android:text="All Live Sports"
        android:textSize="16dp"
        android:layout_below="@id/right_tik2"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/right_tik4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rigth"
        android:layout_below="@id/right_tik3"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/right_tik4"
        android:text="All Live Tv Channels"
        android:textSize="16dp"
        android:layout_below="@id/right_tik3"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />

    <ImageView
        android:id="@+id/right_tik5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rigth"
        android:layout_below="@id/right_tik4"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/right_tik5"
        android:text="Includes Ads in Live TV and Live\nSports"
        android:textSize="16dp"
        android:layout_below="@id/right_tik4"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        />


    <TextView
        android:id="@+id/rupee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_below="@id/right_tik5"
        android:layout_marginTop="25dp"
        android:text=" â‚¹ 699 \n      6 Months"
        android:textSize="25dp"
        android:textColor="@color/white"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_below="@id/rupee"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"/>


</RelativeLayout>